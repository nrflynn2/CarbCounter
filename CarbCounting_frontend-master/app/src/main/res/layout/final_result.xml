<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Final Results:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_title"
        android:gravity="center_horizontal"
        android:textSize="36sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nutrSpinner" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/densitySpinner" />

    <TextView
        android:text="Results!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_text"
        android:textSize="30sp"
        android:layout_weight="0.99" />

    <Button
        android:text="Incorrect Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrong_food" />

    <Button
        android:text="Add Another Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_add" />

    <Button
        android:text="Done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/results_complete" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/return_to_start_button" />
</LinearLayout>